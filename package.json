{
    "name": "skoduler",
    "version": "0.3.0",
    "description": "Discord bot for deadline management",
    "main": "src/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "start": "pnpm nodemon",
        "build": "tsup src/index.ts --minify",
        "test": "pnpm node ./tools/test.js",
        "lint": "pnpm eslint ./src",
        "format": "pnpm prettier --write ./src",
        "check": "pnpm run format && pnpm run lint"
    },
    "keywords": [
        "discord",
        "bot"
    ],
    "author": "Jeric Narte",
    "license": "ISC",
    "dependencies": {
        "discord.js": "^14.15.3",
        "googleapis": "^134.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.5.0",
        "dotenv": "^16.4.5",
        "eslint": "^9.5.0",
        "eslint-config-prettier": "^9.1.0",
        "globals": "^15.6.0",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.2",
        "tsup": "^8.1.0",
        "tsx": "^4.15.7",
        "typescript": "^5.5.2",
        "typescript-eslint": "^7.14.1",
        "zod": "^3.23.8"
    }
}
